@model ProjetoBancoDados.Models.Viagem

@{
    ViewData["Title"] = "Imprimir";
}

<h1>Imprimir</h1>

<div>
    <h4>Viagem</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.NomeCliente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hospedagem)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hospedagem.DiasHospedagem)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transporte)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transporte.NomeTansporte)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoViagem)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecoViagem)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FormaPagamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FormaPagamento.NomeFormaPagamento)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr> 
            <th>
               <h6>Nome do Destino</h6>
            </th>
            <th>
                <h6>Data da Ida</h6>
            </th>
            <th>
                <h6>Data da Volta</h6>
            </th>
            <th>
                <h6>Quantidade de Pessoas</h6>
            </th>
            <th>
                <h6>Endereço do Hotel</h6>
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(model => model.Hospedagem.Destino.NomeDestino)
            </td>
            <td>
                @Html.DisplayFor(model => model.Hospedagem.DataIda)
            </td>
            <td>
                @Html.DisplayFor(model => model.Hospedagem.DataVolta)
            </td>
            <td>
                @Html.DisplayFor(model => model.Hospedagem.QtdPessoas)
            </td>
            <td>
                @Html.DisplayFor(model => model.Hospedagem.Hotel.EnderecoHotel)
            </td>
        </tr>
    </tbody>
</table>
<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>
