@model IEnumerable<ProjetoBancoDados.Models.Viagem>

@{
    ViewData["Title"] = "Index";
}

<h1>Viagem</h1>

<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hospedagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transporte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecoViagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FormaPagamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.NomeCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hospedagem.DiasHospedagem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transporte.NomeTansporte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecoViagem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormaPagamento.NomeFormaPagamento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ViagemId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.ViagemId">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.ViagemId">Deletar</a> |
                    <a asp-action="Imprimir" target="_blank" asp-route-id="@item.ViagemId">Imprimir</a>
            </td>
        </tr>
}
    </tbody>
</table>
