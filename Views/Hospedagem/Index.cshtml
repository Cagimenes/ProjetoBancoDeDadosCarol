@model IEnumerable<ProjetoBancoDados.Models.Hospedagem>

@{
    ViewData["Title"] = "Index";
}

<h1>Hospedagem</h1>

<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DiasHospedagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataIda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataVolta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QtdPessoas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DiasHospedagem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataIda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataVolta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdPessoas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destino.NomeDestino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hotel.NomeHotel)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.HospedagemId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.HospedagemId">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.HospedagemId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
